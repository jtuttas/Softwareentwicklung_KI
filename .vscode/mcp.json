{
    "servers": {
        "dbhub-mysql-npx": {
            "command": "npx",
            "args": [
                "-y",
                "@bytebase/dbhub",
                "--transport",
                "stdio",
                "--dsn",
                "mysql://root:@localhost:3306/bsp_pcshop"
            ]
        },
        "sqlite": {
            "command": "uvx",
            "args": [
                "mcp-server-sqlite",
                "--db-path",
                "${input:db_path}"
            ]
        }
    }
}